<section id="user-cases-section" class="user-cases-section">
  <h3
    class="user-cases-section__title container"
    data-i18n="user-cases-section.title"
    data-aos="fade-right"
  ></h3>
  <p
    class="user-cases-section__subtitle container"
    data-i18n="user-cases-section.subtitle"
    data-aos="fade-right"
    data-aos-delay="400"
  ></p>
  <div class="container">
    <div class="user-cases-swiper">
      <ul class="user-cases-section__card-list swiper-wrapper">
        <li
          class="user-cases-section__card user-cases-section__card--nft-settlement swiper-slide"
        >
          <img
            class="user-cases-section__card-img"
            src="/img/user-cases-section/nft-settlement-img.png"
            alt="NFT Settlement"
          />
          <h4
            class="user-cases-section__card-title"
            data-i18n="user-cases-section.nft-settlement-title"
          ></h4>
          <p
            class="user-cases-section__card-text"
            data-i18n="user-cases-section.nft-settlement-text"
          ></p>
          {{> app-link primary=true class="user-cases-section__card-link"
          href="#" text="user-cases-section.nft-settlement-btn" }}
        </li>
        <li
          class="user-cases-section__card user-cases-section__card--asset-verification swiper-slide"
        >
          <img
            class="user-cases-section__card-img"
            src="/img/user-cases-section/asset-verification-img.png"
            alt="Asset Verification"
          />
          <h4
            class="user-cases-section__card-title"
            data-i18n="user-cases-section.asset-verification-title"
          ></h4>
          <p
            class="user-cases-section__card-text"
            data-i18n="user-cases-section.asset-verification-text"
          ></p>
        </li>
        <li
          class="user-cases-section__card user-cases-section__card--borrowing swiper-slide"
        >
          <img
            class="user-cases-section__card-img"
            src="/img/user-cases-section/borrowing-img.png"
            alt="Lending & Borrowing"
          />
          <h4
            class="user-cases-section__card-title"
            data-i18n="user-cases-section.borrowing-title"
          ></h4>
          <p
            class="user-cases-section__card-text"
            data-i18n="user-cases-section.borrowing-text"
          ></p>
        </li>
        <li
          class="user-cases-section__card user-cases-section__card--airdrop swiper-slide"
        >
          <img
            class="user-cases-section__card-img"
            src="/img/user-cases-section/airdrop-img.png"
            alt="Multichain Airdrop"
          />
          <h4
            class="user-cases-section__card-title"
            data-i18n="user-cases-section.airdrop-title"
          ></h4>
          <p
            class="user-cases-section__card-text"
            data-i18n="user-cases-section.airdrop-text"
          ></p>
        </li>
        <li
          class="user-cases-section__card user-cases-section__card--staking swiper-slide"
        >
          <img
            class="user-cases-section__card-img"
            src="/img/user-cases-section/staking-img.png"
            alt="Staking aggregator"
          />
          <h4
            class="user-cases-section__card-title"
            data-i18n="user-cases-section.staking-title"
          ></h4>
          <p
            class="user-cases-section__card-text"
            data-i18n="user-cases-section.staking-text"
          ></p>
        </li>
        <li
          class="user-cases-section__card user-cases-section__card--share swiper-slide"
        >
          <h4
            class="user-cases-section__card-title"
            data-i18n="user-cases-section.share-title"
          ></h4>
        </li>
      </ul>
    </div>
  </div>

  {{> blockchains-list partnersCtx }}
</section>
