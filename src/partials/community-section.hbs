<section class="community-section container">
  <div class="community-section__titles-wrapper">
    <h2
      class="community-section__title"
      data-i18n="community-section.title"
      data-aos="zoom-in"
    ></h2>
    <p
      class="community-section__description"
      data-i18n="community-section.description"
      data-aos="zoom-in"
      data-aos-delay="400"
    ></p>
  </div>
  <div
    class="community-section__links-wrapper"
    data-aos="zoom-in"
    data-aos-delay="800"
  >
    {{> app-link class="community-section__link" href="#"
    text="community-section.join-testnet-link" }} {{> app-link
    class="community-section__link" href="#"
    text="community-section.white-paper-link" }}
  </div>

  <ul class="base-card-list">
    {{#each list}}
    <li
      class="community-section__card base-card-list__card"
      data-aos="fade-up"
      data-aos-duration="1000"
      data-aos-delay="{{getShiftedDelay @index 300}}"
      data-aos-anchor-placement="top-bottom"
    >
      <a
        class="community-section__card-link"
        href="{{this.link}}"
        target="_blank"
        rel="nofollow noopener noreferrer"
      >
        <div class="community-section__card-icon">
          <svg height="20" width="20">
            <use href="{{this.icon}}"></use>
          </svg>
        </div>
        <h5
          class="community-section__card-title"
          data-i18n="{{this.title}}"
        ></h5>
        <div class="community-section__learn-more-wrapper">
          <span data-i18n="community-section.learn-more-link"></span>
          <svg
            class="community-section__learn-more-icon"
            height="13"
            width="11"
          >
            <use href="/sprite.svg#icon-chevron-down"></use>
          </svg>
        </div>
      </a>
    </li>
    {{/each}}
  </ul>
</section>
